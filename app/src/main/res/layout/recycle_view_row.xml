<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_university"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_university_card_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/image_unviersity"
            android:scaleType="centerCrop"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_name_university"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:textSize="19sp"
            tools:text="Universitas" />
        <TextView
            android:id="@+id/text_address_university"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:textSize="14sp"
            tools:text="Alamat Universitas" />

    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>